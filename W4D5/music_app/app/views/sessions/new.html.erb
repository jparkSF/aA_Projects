<div class="form">
  <div class="form-contents">


    <h2>Sign in!</h2>
    <%= render 'shared/errors' %>

    <form class="" action="<%= session_url %>" method="post">
      <%= auth_token %>
      <label for="">Email:
        <br>
        <input type="text" name="user[email]">
      </label>
      <br>

      <label for="">Password:
        <br>
        <input type="password" name="user[password]">
      </label>
      <br>

      <input type="submit" value="Sign In">
    </form>
  </div>
</div>
