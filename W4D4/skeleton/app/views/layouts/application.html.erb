<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <ul>
        <% if logged_in? %>
        <li>Signed in as "<%= current_user.user_name %>"</li>
        <li><%= link_to 'Sign Out', session_url, method: 'DELETE' %></li>
        <% else  %>
        <li><%= link_to 'Sign In', new_session_url, method: 'GET' %></li>
        <li><%= link_to 'Sign Up', new_user_url, method: 'GET' %></li>
        <% end  %>

      </ul>
    </nav>
    <%= yield %>
  </body>
</html>
